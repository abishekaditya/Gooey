        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label x:Name="label" Content="Enter Name" HorizontalAlignment="Left" Margin="10,25,0,0" Height="55" Width="205" FontFamily="Corbel" FontSize="36" VerticalAlignment="Top" Background="#00000000"/>
